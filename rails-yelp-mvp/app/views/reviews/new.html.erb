<div class="container">
  <h1>Add a review on <%=@restaurant.name%></h1>
  <% if @review.errors.any? %>
    <div id="error_explanation">
    <p>Please complete the fields</p>
    </div>
  <% end %>


<%= form_for([@restaurant, @review]) do |f| %>


  <div class="form-group">
    <%= f.label :rating %>
  <br>
    <%= f.select :rating, [0,1,2,3,4,5], {}, class: "form-control"%>
  </div>


  <div class="form-group">
    <%= f.label :content %>
  <br>
    <%= f.text_area :content, class: "form-control", rows: 10%>
  </div>


  <%= f.submit class: 'btn btn-secondary' %>
<% end %>




</div>
